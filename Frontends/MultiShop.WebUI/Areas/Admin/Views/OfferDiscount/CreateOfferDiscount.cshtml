@model CreateOfferDiscountDto
@{
    ViewData["Title"] = "CreateOfferDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Özel Teklifi Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">

                        <label>Özel Teklif Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br /><label>Özel Teklif Alt Başlığı</label>
                        <input type="text" class="form-control" asp-for="SubTitle" />
                        <br /><label>Özel Teklif Görsel Linki</label>
                        <input type="text" class="form-control" asp-for="ImgUrl" />
                        <br />
                        <label>Özel Teklifi Buton Başlığı</label>
                        <input type="text" class="form-control" asp-for="ButtonTitle" />
                        <br />
                        <button class="btn btn-primary">Özel Teklifi Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

